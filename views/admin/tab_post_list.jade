main.row.tab.tab-post-list(ng-controller="PostListController")
   main.row.content
      section.col-4.posts-wrap
         header.title
            h2 Post List
            a.btn.success.add-new.icon-plus
         ul.list
            li(ng-repeat="post in posts",ng-click='getContent(post)',ng-class="{true: 'active', false: ''}[post===currentPost]")
               h2 {{post.title}}
               p {{post.abstract}}...
      section.col-8.pre {{currentPost.content||""}}